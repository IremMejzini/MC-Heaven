@model IEnumerable<MCApp.Models.TShop>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameShop)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDeliver)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpenHourId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameShop)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeliver)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpenHourId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ShopId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ShopId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ShopId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
